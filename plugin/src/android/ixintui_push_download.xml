<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ixintui_push_download_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@android:drawable/stat_sys_download"/>

    <TextView
        android:id="@+id/ixintui_push_download_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ixintui_push_download_icon"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        tools:ignore="all"
        />

    <ProgressBar android:id="@+id/ixintui_push_download_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/ixintui_push_download_title"
        android:layout_alignLeft="@id/ixintui_push_download_title"
        android:max="100"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/ixintui_push_download_percent"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom = "true"
        android:layout_below="@+id/ixintui_push_download_progress"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="4dp"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/ixintui_push_download_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:layout_below="@+id/ixintui_push_download_progress"
        android:layout_toLeftOf="@+id/ixintui_push_download_percent"
        android:layout_toRightOf="@+id/ixintui_push_download_icon"
        android:layout_alignLeft="@id/ixintui_push_download_title"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        tools:ignore="all"
        />


</RelativeLayout>