<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ixintui_custom_notif_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@android:string/unknownName"/>

    <TextView
        android:id="@+id/ixintui_custom_notif_time"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/ixintui_custom_notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ixintui_custom_notif_time"
        android:layout_toRightOf="@+id/ixintui_custom_notif_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        tools:ignore="all"
        />

    <TextView
        android:id="@+id/ixintui_custom_notif_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ixintui_custom_notif_title"
        android:layout_below="@+id/ixintui_custom_notif_title"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        tools:ignore="RtlHardcoded"
        />

</RelativeLayout>